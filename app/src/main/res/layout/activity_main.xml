<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0efff"
    android:orientation="vertical"
    tools:context="com.kryptoblocks.campaignn.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Announcement Campaign"
        android:textColor="#595fed"
        android:textSize="25dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/jet"
            android:id="@+id/jet"
            android:adjustViewBounds="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"/>



    </LinearLayout>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue the conversation even after your customers leave your business. Drop them a note regarding events,promotions, or even a friendly “hello”!"
        android:textColor="#080917"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/loginBtn1"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:text="Save"
        android:textColor="#FFF"
        android:background="#5abbf1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/doctor_one"
                android:paddingBottom="10dp"
                android:paddingTop="15dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle"
                            android:adjustViewBounds="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Create Message"
                            android:layout_marginRight="10dp"
                            android:textSize="18dp"
                            android:textColor="#000"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle"
                            android:adjustViewBounds="true"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Schedule"
                            android:layout_marginRight="10dp"
                            android:textSize="18dp"
                            android:textColor="#000"/>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Email Subject Line"
                            android:paddingTop="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="18dp"
                            android:textColor="#000"/>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                        <EditText
                            android:background="@drawable/btn_back"
                            android:layout_width="350dp"
                            android:layout_height="30dp"
                            android:id="@+id/editTextTo" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Head Line (optional)"
                            android:paddingTop="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="18dp"
                            android:textColor="#000"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <EditText
                            android:background="@drawable/btn_back"
                            android:layout_width="350dp"
                            android:layout_height="30dp"
                            android:id="@+id/editTextSubject" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Image for Campaign"
                            android:paddingTop="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="18dp"
                            android:textColor="#000"/>




                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:background="@drawable/btn_back"
                            android:layout_width="350dp"
                            android:layout_height="150dp"
                            android:id="@+id/editText6" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Email Body Copy"
                            android:paddingTop="10dp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/textview3"
                            android:textSize="18dp"
                            android:textColor="#000"/>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                        <EditText
                            android:background="@drawable/btn_back"
                            android:layout_width="350dp"
                            android:layout_height="150dp"
                            android:id="@+id/editTextMessage" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Include a Link in Your Mail?"
                            android:paddingTop="10dp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/textview5"
                            android:textSize="18dp"
                            android:textColor="#000"/>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Yes ,Include a Link!"
                            android:paddingTop="10dp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/textview6"
                            android:textSize="14dp"
                            android:textColor="#000"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                        <EditText
                            android:background="@drawable/btn_back"
                            android:layout_width="330dp"
                            android:text=" View Our Rewards"
                            android:paddingTop="8dp"
                            android:paddingLeft="2dp"
                            android:layout_height="30dp"
                            android:textSize="14dp"
                            android:id="@+id/editTex1"
                            android:layout_marginLeft="20dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Where Should This Link Goes To?"
                            android:paddingTop="10dp"
                            android:paddingLeft="11dp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/textvie1"
                            android:textSize="14dp"
                            android:textColor="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                         <EditText
                            android:background="@drawable/btn_back"
                            android:layout_width="330dp"
                            android:paddingTop="8dp"
                            android:paddingLeft="2dp"
                            android:text="  https:RewardX/3456/business"
                            android:layout_height="30dp"
                            android:textSize="14dp"
                            android:id="@+id/editTex2"
                            android:layout_marginLeft="20dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" No Thanks!"
                            android:paddingTop="10dp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/textvie6"
                            android:textSize="14dp"
                            android:textColor="#000"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/buttonSend"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:text="Continue"
                            android:textColor="#FFF"
                            android:background="#5abbf1"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                           />



                    </LinearLayout>








                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
